<?xml version="1.0" encoding="ISO-8859-1" ?>
<!--
	Abandon City or Raise Building
	by unknown, Bhruic, Nemo, OrionVetran, Dancing Hoskuld

	for The BUG Mod.
-->
<mod id="AbandonCity" 
	 module="AbandonCityEventManager" 
	 name="AbandonCity" 
	 author="unknown, Bhruic, Nemo, OrionVetran, Dancing Hoskuld" 
	 version="1.01" 
	 date="20/03/2009"
	 url="http://forums.civfanatics.com/showthread.php?t=252243">

	<options id="AbandonCity" file="AbandonCityDemolishBuilding.ini">
		<section id="AbandonCity">
			<option id="Enabled" 
					type="boolean" default="True" 
					get="isEnabled" set="setEnabled" 
					label="Enable Abandon City" 
					help="Allow player(s) to abandon city or demolish buildings."/>
			<list   id="ProduceUnits" key="Produce Units" 
					type="int" default="1" listType="string" 
					get="getProduceUnits" set="setProduceUnits">
				<choice id="Workers" get="isProduceWorkers"/>
				<choice id="Settlers" get="isProduceSettlers"/>
				<choice id="Both" get="isProduceBoth"/>
			</list>
			<option id="Autolog" 
					type="boolean" default="True" 
					get="isAutolog" set="setAutolog"/>
		</section>
	</options>

	<events module="AbandonCityEventManager"/>
	<shortcut key="Ctrl A" function="onStartAbandonCity"/>

	
</mod>
